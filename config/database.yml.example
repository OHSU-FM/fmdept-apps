test:
  adapter: postgresql
  database: fmdept_apps_test
  host: localhost
  username: fmdept_apps
  password: 'some_password_here'
  schema: public

production:
  adapter: postgresql
  database: fmdept_apps
  host: localhost
  username: fmdept_apps
  password: 'some_password_here'
  schema: public

