# SQLite version 3.x
#   gem install postgresql-ruby (not necessary on OS X Leopard)
development:
  adapter: postgresql
  database: fmdept_apps_development
  host: localhost
  username: fmdept_apps
  password: 'some_password_here'
  schema: public
  reconnect: false

